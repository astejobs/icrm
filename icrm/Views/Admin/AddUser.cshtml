@model icrm.Models.RegisterViewModel
@{
    Layout = null;

}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <!-- Meta -->
    <meta name="description" content="feedback managment system.">
    <meta name="author" content="feedback">

    <title>ICRM 2.0</title>

    <!-- vendor css -->
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    <link href="~/Content/lib/jquery-toggles/css/toggles-full.css" rel="stylesheet">
    <link href="~/Content/lib/jt.timepicker/css/jquery.timepicker.css" rel="stylesheet">
    <link href="~/Content/lib/spectrum/css/spectrum.css" rel="stylesheet">
    <link href="~/Content/lib/bootstrap-tagsinput/css/bootstrap-tagsinput.css" rel="stylesheet">

    <!-- Feadback CSS -->
    <link rel="stylesheet" href="~/Content/css/slim.css">

</head>
<body>
     @Html.Partial("_AdminMenu")

    <div class="slim-mainpanel">
        <div class="container">
            <div class="slim-pageheader">
                <ol class="breadcrumb slim-breadcrumb">
                    <li class="breadcrumb-item"><a href="#">@Resources.Resource.Home</a></li>

                    @if (@ViewBag.rolename == "HR")
                    {
                    <li class="breadcrumb-item active" aria-current="page">
                        @Resources.Resource.Add_Icrm_Agent

                    </li>
                    }
                        @if (@ViewBag.rolename == "Department")
                        {
                    <li class="breadcrumb-item active" aria-current="page">

                        @Resources.Resource.Add_department_user


                    </li>
                        }
                        </ol>
                @if (@ViewBag.rolename == "HR")
                {
                <h6 class="slim-pagetitle">@Resources.Resource.Add_Icrm_Agent</h6>
                }
                @if (@ViewBag.rolename == "Department")
                {
                <h6 class="slim-pagetitle">@Resources.Resource.Add_department_user</h6>
                }
            </div><!-- slim-pageheader -->
          
            <div class="section-wrapper">
                @if (@ViewBag.rolename == "Department")
                {
                    <label class="section-title">@Resources.Resource.Add_department_user</label>
                }
                @if (@ViewBag.rolename == "HR")
                {

                    <label class="section-title">@Resources.Resource.Add_Icrm_Agent</label>
                }

                @if (@ViewBag.message != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        <strong> @ViewBag.message</strong>
                    </div>
                }
                @if (@ViewBag.messageSaved != null)
                {
                    <div class="alert alert-success" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        <strong> @ViewBag.messageSaved</strong>
                    </div>
                }
                

                @Html.ValidationSummary()
                @using (Html.BeginForm("postUser", "Admin", FormMethod.Post, null))
                {

                    @Html.AntiForgeryToken()

                    <input type="hidden" name="rolename" value="@ViewBag.rolename" />

                    <div class="form-layout">
                        <div class="row mg-b-25">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label">@Resources.Resource.Salutation <span class="tx-danger">*</span></label>
                                    <select class="form-control select2" data-placeholder="Choose country">
                                        <option label="Choose"></option>
                                        <option value="">Mr</option>
                                        <option value="">Miss</option>
                                        <option value="">Mrs</option>
                                        <option value="">Mdm</option>
                                        <option value="">Dr</option>
                                    </select>
                                </div>
                            </div><!-- col-4 -->
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label">@Resources.Resource.Employee_Id<span class="tx-danger">*</span></label>
                                    @Html.TextBoxFor(x => x.EmployeeId, new { @class = "form-control", placeholder = "Enter EmployeeID" })

                                </div>
                            </div><!-- col-4 -->
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label">@Resources.Resource.Password <span class="tx-danger">*</span></label>
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                                </div>
                            </div><!-- col-4 -->
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label">@Resources.Resource.Confirm_Password <span class="tx-danger">*</span></label>
                                    @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                                </div>
                            </div><!-- col-4 -->



                        </div><!-- row -->

                        <div class="form-layout-footer">
                            <button class="btn btn-primary bd-0">@Resources.Resource.Submit</button>
                            <button class="btn btn-secondary bd-0">@Resources.Resource.Cancel</button>
                        </div><!-- form-layout-footer -->
                    </div>
                }


            </div><!-- container -->
        </div><!-- slim-mainpanel -->

        @Html.Partial("_AdminFooter")
</body>
</html>








